    <!-- JQuery -->
    <script>
    $(document).ready(function () {
        // Function untuk memperbarui counter menggunakan jQuery
        function updateCharacterCounter($inputElement, $counterElement, maxLength) {
            $inputElement.on('input', function () {
                const currentLength = $inputElement.val().length;
                $counterElement.text(`${currentLength}/${maxLength} `);
            });
        }
    
        // Login form counters
        const $emailLogin = $('#login-email');
        const $passwordLogin = $('#login-password');
        const $emailLoginCounter = $('#login-email-counter');
        const $passwordLoginCounter = $('#login-password-counter');
    
        updateCharacterCounter($emailLogin, $emailLoginCounter, 30);
        updateCharacterCounter($passwordLogin, $passwordLoginCounter, 10);
    
        // Sign-up form counters
        const $usernameSignUp = $('#username');
        const $emailSignUp = $('#email-signup');
        const $passwordSignUp = $('#password-signup');
        const $usernameSignUpCounter = $('#username-counter');
        const $emailSignUpCounter = $('#email-signup-counter');
        const $passwordSignUpCounter = $('#password-signup-counter');
    
        updateCharacterCounter($usernameSignUp, $usernameSignUpCounter, 20);
        updateCharacterCounter($emailSignUp, $emailSignUpCounter, 30);
        updateCharacterCounter($passwordSignUp, $passwordSignUpCounter, 10);
    
        // Validasi password untuk minimal 8 karakter (Sign-up)
        function validatePassword() {
            const password = $('#password-signup').val();
            if (password.length < 8) {
                alert('Password harus minimal 8 karakter!');
                return false; // Mencegah pengiriman form jika password kurang dari 8 karakter
            }
            return true; // Mengizinkan pengiriman form jika password memenuhi syarat
        }
    
        // Validasi password minimal 8 karakter (Login)
        function validateLoginPassword() {
            const password = $('#login-password').val();
            if (password.length < 8) {
                alert('Password login harus minimal 8 karakter!');
                return false; // Mencegah pengiriman form jika password kurang dari 8 karakter
            }
            return true; // Mengizinkan pengiriman form jika password memenuhi syarat
        }
    
        // jQuery untuk switch antara login dan sign-up
        $('#sign-up-btn').on('click', function () {
            $('.container').addClass('sign-up-mode');
        });
    
        $('#sign-in-btn').on('click', function () {
            $('.container').removeClass('sign-up-mode');
        });
    
        // Handle form submission dengan validasi
        $('#form-login').on('submit', function () {
            return validateLoginPassword(); // Validasi password saat submit form login
        });
    
        $('#form-signup').on('submit', function () {
            return validatePassword(); // Validasi password saat submit form signup
        });
    });
    </script>
</body>

</html>
